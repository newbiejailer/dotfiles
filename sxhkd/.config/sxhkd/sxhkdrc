# Increase volume
super + equal
  amixer sset Master 5%+; pkill -RTMIN+10 $STATUSBAR

# Decrease volume
super + minus
  amixer sset Master 5%-; pkill -RTMIN+10 $STATUSBAR

# Mute or unmute volume
super + shift + m
  amixer sset Master toggle; pkill -RTMIN+10 $STATUSBAR

# Lock screen
super + shift + l
  slock
